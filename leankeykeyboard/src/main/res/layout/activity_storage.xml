<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black">

    <!-- Unified Status Bar -->
    <include
        android:id="@+id/unified_status_bar"
        layout="@layout/unified_status_bar" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:paddingTop="0dp"
        android:paddingBottom="20dp"
        android:overScrollMode="never"
        android:scrollbarStyle="insideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/black"
            android:minHeight="600dp">

            <!-- Storage Charts Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="@android:color/black">

                <!-- Media Storage Chart -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="15dp">

                    <!-- Pie Chart Container -->
                    <FrameLayout
                        android:id="@+id/media_storage_chart_container"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="15dp"
                        android:background="@android:color/transparent" />

                    <!-- Media Storage Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Media Storage"
                            android:textSize="18sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_marginBottom="5dp" />

                        <TextView
                            android:id="@+id/media_storage_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Free: 0 GB / Total: 0 GB"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray" />

                    </LinearLayout>

                </LinearLayout>

                <!-- App Storage Chart -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="15dp">

                    <!-- Pie Chart Container -->
                    <FrameLayout
                        android:id="@+id/app_storage_chart_container"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="15dp"
                        android:background="@android:color/transparent" />

                    <!-- App Storage Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="App Storage"
                            android:textSize="18sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_marginBottom="5dp" />

                        <TextView
                            android:id="@+id/app_storage_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Free: 0 GB / Total: 0 GB"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginBottom="15dp" />

            </LinearLayout>

            <!-- Storage Options List -->
            <ListView
                android:id="@+id/storage_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/subtle_divider"
                android:dividerHeight="1dp"
                android:padding="0dp"
                android:scrollbars="none"
                android:layout_marginBottom="20dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout> 