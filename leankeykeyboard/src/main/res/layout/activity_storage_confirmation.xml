<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black">

    <!-- Unified Status Bar -->
    <include
        android:id="@+id/unified_status_bar"
        layout="@layout/unified_status_bar" />

    <!-- Explanation Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        

        <!-- Title -->
        <TextView
            android:id="@+id/confirmation_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Media Storage"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginBottom="15dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="15dp" />

        <!-- Explanation Text -->
        <TextView
            android:id="@+id/confirmation_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This will delete everything from SD card except Rockbox folders. This action cannot be undone."
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="20dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="20dp" />

    </LinearLayout>

    <!-- Confirmation Options List -->
    <ListView
        android:id="@+id/confirmation_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/subtle_divider"
        android:dividerHeight="1dp"
        android:padding="0dp"
        android:scrollbars="none" />

</LinearLayout> 