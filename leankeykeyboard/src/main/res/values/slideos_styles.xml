<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- slideOS Keyboard specific styles for 480x360 display -->
    
    <!-- Full-width settings theme -->
    <style name="Theme.slideOS" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:listPreferredItemHeight">36dp</item>
        <item name="android:listPreferredItemPaddingLeft">16dp</item>
        <item name="android:listPreferredItemPaddingRight">16dp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionBarOverlay">false</item>
    </style>

    <!-- iPod classic blue color -->
    <color name="ipod_classic_blue">#007AFF</color>
    <color name="ipod_classic_blue_dark">#0056CC</color>
    
    <!-- Large text styles for settings -->
    <style name="slideOS.TextAppearance.Large" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="slideOS.TextAppearance.Medium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="slideOS.TextAppearance.Small" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Full-width list style with iPod classic blue selection -->
    <style name="slideOS.ListView" parent="@android:style/Widget.ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:divider">@android:color/darker_gray</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:listSelector">@color/ipod_classic_blue</item>
    </style>

    <!-- Large button style with iPod classic blue -->
    <style name="slideOS.Button" parent="@android:style/Widget.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/ipod_classic_blue</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- Large title style -->
    <style name="slideOS.Title" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Attribution text style -->
    <style name="slideOS.Attribution" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>
</resources> 